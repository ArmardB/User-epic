<!DOCTYPE html>
<html>
  <head>
    <title>User Epic</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand"<%= link_to 'UserEpic', root_path %></a>
      </div>
  
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li><a <%= link_to 'CREATE NEW PROJECT', new_project_path %></a></li>
          <% end %>  
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li><a <%= link_to 'PROJECTS', projects_path %></a></li>
            <li><a <%= link_to 'ACCOUNT', edit_user_registration_path %></a></li>
            <li><a <%= link_to 'SIGN OUT', destroy_user_session_path, method: :delete %></a></li>
          <% else %>
            <a role="button" class="btn btn-info btn-sm hero nav" <%= link_to 'SIGN IN', user_session_path %> </a>
            <a role="button" class="btn btn-success btn-sm hero nav" <%= link_to 'SIGN UP', new_user_registration_path %> </a>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

 
    <%= render 'layouts/flashes' %>
       
    <%= yield %>
  </body>
  <footer>
    <p>Copyright &copy; 2016. Developed by <a href="http://www.armardbellamy.com">Armard Bellamy</a></p>
  </footer>
</div>
</html>
