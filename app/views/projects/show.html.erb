<p id="notice"><%= notice %></p>
<h2 class="project_title">Project: <%= @project.title %></h2>
<p class="project_sub_title">Description: <%= @project.description%></p>

<h3>User Stories</h3>
<% @project.user_stories.each do |user_story| %>
  <% if user_story.nil? %>
    <div class="project-wrapper">
      <h2>No user stories to display</h2>  
    </div>
  <% else %>
    <div class="row sortable" data-id="<%= user_story.id %>">
      <div class="panel panel-info">
        <div class="panel-body">
          <%= render user_story %>
        </div>
        <div class="panel-footer"<%= user_story.id %>">
          <%= link_to 'Edit User Story', edit_project_user_story_path(@project, user_story.id), class: "btn btn-primary" %>
          <%= link_to 'Delete', project_user_story_path(@project, user_story.id), method: :delete, data: { confirm: "Are you sure" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
      
  <% end %>
<% end %>

<div id="form">
  <%= render 'user_stories/form' %>
</div>

<div class="links">
  <%= link_to 'Back', projects_path %> |
  <%= link_to 'Edit', edit_project_path %> |
  <%= link_to 'Delete', project_path(@project), method: :delete, data: { confirm: "Are you sure?"} %>
</div
