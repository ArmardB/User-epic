<p id="notice"><%= notice %></p>
<div class="panel panel-info col-md-8 center">
  <div class="panel-heading">
    <h3 class="panel-title">Current Projects</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped">
      <thead>
    <tr>
      <th>Project Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.description %></td>
          <td>
            <%= link_to 'User Stories', project, class: "btn btn-primary" %>
            <%= link_to 'Edit Project', edit_project_path(project), class: "btn btn-success" %>
            <%= link_to 'Delete Project', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
    </table>
        <%= link_to 'New Project', new_project_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
</div>



